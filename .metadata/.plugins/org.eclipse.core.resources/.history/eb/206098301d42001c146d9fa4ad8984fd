
import  java.util.Scanner ;

public  class Exercicio1 {

	public  static  void  main ( String [] args ) {
	/*
	1. Faça um sistema que leia a idade de uma pessoa expressa em anos, meses e dias e mostre-a 
	expressa apenas em dias. 
	*/
		// Declaração de variaveis
		int anos =  0 , meses =  0 , dias =  0 , res =  0 ;
				
		// Inputs
		Scanner tec =  novo  Scanner ( Sistema . In);
		Sistema . para fora . print ( " Informe seu ano de nascimento: " );
		anos = tec . nextInt ();
		
		Sistema . para fora . print ( " Informe quantos meses: " );
		meses = tec . nextInt ();
		
		Sistema . para fora . print ( " Informe quantos dias: " );
		dias = tec . nextInt ();
		
		
		// calculo
		res = (anos * 365 ) + (meses * 30 ) + dias;
		
		// saida
		Sistema . para fora . printf ( "Você tem% d dias " , res);
		

	}

}