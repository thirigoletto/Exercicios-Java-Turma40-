
public class Exercicio6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		6. Construa um programa em c que, tendo como dados de entrada dois pontos quaisquer no plano,
		P (x1, y1) e P (x2, y2), percorrer a distância entre eles. A fórmula que efetua tal cálculo é:
		*/
			
			// variaveis
			duplo x1 =  0 , x2 =  0 , y1 =  0 , y2 =  0 , p =  0 , d = 0;
			
			// input
			Scanner tec =  novo  Scanner ( Sistema . In);
			Sistema . para fora . print ( " Digite um valor para X1: " );
			x1 = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para X2: " );
			x2 = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para Y1: " );
			y1 = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para Y2: " );
			y2 = tec . nextDouble ();
			
			// calculo
			p =  matemática . pow ((x1 + x2), 2 ) + Matemática . pow ((y1 + y2), 2 );
			d =  matemática . sqrt (p);
			
			// saida
			Sistema . para fora . printf ( " O resultado da distância entre eles é% .2f " , p);
		}

	}

