
public class Exercicio2 {

	public static void main(String[] args) {
		/*
		2. Faça um sistema que leia a idade de uma pessoa expressa em dias e mostre-a expressa em 
		anos, meses e dias. 
		*/
			
			// declaração de variaveis
			dias int =  0 , anos =  0 , meses =  0 ;
			
			// entradas
			Scanner tec =  novo  Scanner ( Sistema . In);
			Sistema . para fora . print ( " Informe a sua idade em dias: " );
			dias = tec . nextInt ();
			
			// calculo
			anos = (dias / 365 );
			meses = (dias % 365 ) / 30 ;
			dias = (dias % 365 ) % 30 ;
			
			// saida
			Sistema . para fora . printf ( "Você possui% d anos,% d meses e% d dias " , anos, meses, dias);
		}

	

	}


