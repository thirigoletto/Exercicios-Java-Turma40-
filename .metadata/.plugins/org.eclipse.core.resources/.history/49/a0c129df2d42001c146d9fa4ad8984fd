
public class Exercicio7 {

	public static void main(String[] args) {
		/*
		7. Um sistema de equações lineares do tipo: pode ser resolvido segundo abaixo: 
		*/
			
			// variaveis
			duplo a =  0 , b =  0 , c =  0 , d =  0 , e =  0 , f =  0 , x =  0 , y =  0 ;
			
			// input
			Scanner tec =  novo  Scanner ( Sistema . In);
			Sistema . para fora . print ( " Digite um valor para A: " );
			a = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para B: " );
			b = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para C: " );
			c = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para D: " );
			d = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para E: " );
			e = tec . nextDouble ();
			
			Sistema . para fora . print ( " Digite um valor para F: " );
			f = tec . nextDouble ();
			
			// calculo
			x = ((c * e) - (b * f)) / ((a * e) - (b * d));
			y = ((a * f) - (c * d)) / ((a * e) - (b * d));
			
			// saida
			Sistema . para fora . printf ( " O resultado de x é% .2f e o resultado de y é% .2f " , x, y);
		}

	}

